- if request.fullpath == new_question_path
  = link_to image_tag('logos/header_post_question.png', { :border => '0', :alt => 'ロゴ'}), new_question_path
- elsif request.fullpath == questions_path
  = link_to image_tag('logos/header_questions.png', { :border => '0', :alt => 'ロゴ'}), questions_path
- elsif @question.present? && request.fullpath == question_path
  = link_to image_tag('logos/header_post_answer.png', { :border => '0', :alt => 'ロゴ'}), question_path(@question)
- elsif request.fullpath == edit_user_registration_path
  = link_to image_tag('logos/header_setting.png', { :border => '0', :alt => 'ロゴ'}), edit_user_registration_path
- else
  = link_to image_tag('TitleLogo_2_Blue.png', { :border => '0', :alt => 'ロゴ'}), root_path
