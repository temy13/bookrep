%div.questions
  %ul.question-list
    - questions.each do |question|
      %li.question-item
        = link_to(question_path(question), class: '') do
          -# = image_tag "OG_pattern01.jpg", {:class => "question-bg"}
          %div.question-item-main
            %div.question-item-main-content.flexiblebox
              = question.content
          %div.question-item-footer.row
            %div.question-item-footer-left.col-4
              =image_tag "title_logo_1.png"
            %div.question-item-footer-center.col-4
              - if question.answers.length > 0
                = image_tag "communication-4.png"
                = question.answers.length
            %div.question-item-footer-right.col-4
              = render 'share/username_post', obj: question, link: false

= paginate questions, :param_name => page_name, :params => {:page => page_name}#, remote: true
